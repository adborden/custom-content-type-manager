<div id="wrapper_[+target_id+]">
	<input type="hidden" id="[+target_id+]" name="[+target_name+]" value="[+ID+]" />
	<table>
		<tbody>
			<tr>
				<td>
					<img width="32" height="32" alt="" src="[+post_icon+]" class="cctm_tiny_thumb"/>
				</td>
				<td>
					<p>[+post_title+] <span class="cctm_id_label">([+ID+])</span>
					<span onclick="javascript:remove_html('wrapper_[+target_id+]');" class="cctm_close_rollover"></span><br/>
					[+post_modified+]<br/>
					<a href="[+edit_url+]">Edit Selected Post</a></p>
				</td>
			</tr>
		</tbody>
	</table>
</div>
